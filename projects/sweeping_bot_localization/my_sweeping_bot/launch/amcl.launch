<?xml version="1.0"?>
<launch>

  <!-- Map server -->
  <arg name="map_file" default="$(find my_sweeping_bot)/maps/jackal_race.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Localization-->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <remap from="scan" to="my_sweeping_bot/laser/scan"/>

    <!-- Odometry -->
    <param name="odom_frame_id" value="odom"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>
    <param name="odom_alpha1" value="0.010"/>
    <param name="odom_alpha2" value="0.010"/>
    <param name="odom_alpha3" value="0.001"/>
    <param name="odom_alpha4" value="0.001"/>
    <param name="update_min_d" value="0.05"/>
    <param name="update_min_a" value="0.05"/>

    <!-- Overall filter -->
    <param name="transform_tolerance" value=".5"/>
    <param name="min_particles" value="10"/>
    <param name="max_particles" value="300"/>
    <param name="initial_pose_y" value="0.0"/>

    <!-- Laser -->
    <param name="laser_min_range" value="0.1"/>
    <param name="laser_max_range" value="30.0"/>
    <param name="laser_max_beams" value="30"/>
    <param name="laser_model_type" value="likelihood_field"/>
    
  </node>

  <!-- Move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find my_sweeping_bot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find my_sweeping_bot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find my_sweeping_bot)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find my_sweeping_bot)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find my_sweeping_bot)/config/base_local_planner_params.yaml" command="load" />

    <remap from="cmd_vel" to="cmd_vel"/>
    <remap from="odom" to="odom"/>
    <remap from="scan" to="my_sweeping_bot/laser/scan"/>

    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
    <param name="controller_frequency" value="5.0" />

  </node>

</launch>
